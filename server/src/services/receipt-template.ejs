      .container {
        padding: 30px 40px;
        line-height: 1.15;
      }

      h1 {
        margin-bottom: 0.5rem;
      }

      h4 {
        line-height: 0%;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      td {
        padding: 10px;
        border: 1px solid #ddd;
        vertical-align: top;
      }
      .address {
        width: 50%;
        line-height: 1.25;
      }

      .foot {
        line-height: 1.25;
      }

      .footer {
        margin-top: 40px;
        font-size: 12px;
        color: #444;
        text-align: center;
      }

      .text-muted {
        color: #666;
      }
